<form action="/shelterPet">
    <div class="container">
        <div class="jumbortan mx-auto text-center">
            <h3>Find a Pet From Shelters</h3>
        </div>
        <div class="row">
            <div class="col-lg-12 d-flex justify-content-center">
                <div class="card w-100" id="cardshelterpet">
                    <div class="card-header text-center">
                        <div class="d-flex align-items-center">
                            <h5 class="mx-auto w-100">
                                Find Pets
                            </h5>
                        </div>
                    </div>
                    <div class="card-body">

                        <div class="form-group">
                            <label>Please Enter Disered Postal Code</label>
                            <input type="text" class="form-control" name="postcode" placeholder="Postal Code">
                        </div>
                         <div class="form-group">
                            <label>Please Select Pet Type</label>
                        <select class="form-select form-control" name="pettype" aria-label="Default select example">
                            <option selected>Type Of Pet</option>
                            <option value="dog">Dog</option>
                            <option value="cat">Cat</option>
                            <option value="rabbit">Rabbit</option>
                            <option value="bird">Bird</option>
                        </select>
                        </div>

                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btm btn-primary btn-md">Find your Pet</button>

                    </div>
                </div>

            </div>

        </div>
    </div>
</form>