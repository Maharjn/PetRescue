    <div class="card">
      <h3 class="card-header">Sign Up</h3>
      <form id="signup-form" action="/signup" method="post" class="card-body">
        <label class="form-label" for="firstname">First Name</label>
        <input name="firstname" type="text" class="form-input" />

        <label class="form-label" for="lastname">Last Name</label>
        <input name="lastname" type="text" class="form-input" />

        <label for="email" class="form-label">Username/Email ID</label>
        <input name="email" type="text" class="form-input" />


        <label class="form-label" for="password">Password</label>
        <input  name="password" type="password" class="form-input" />

        

        <button type="submit" class="btn">Signup!</button>
        <a class="login-link" href="/login">Log in instead</a>
      </form>
    </div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
