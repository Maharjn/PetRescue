<section>
    <div class="container justify-content-center" style="margin-left: 200px;">
        <div class="row">
            <div class="col-md-6 d-flex p-3 justify-content-center " style="column-gap: 40px;">
                {{#each shelterPets as |shelterPet|}}

                <article>
                    <div class="card w-100" style="width: 100%;margin-left: 150px; margin-right:150px;">
                        <div class="card-body">
                            <div >
                                <p>
                                    Name:
                                    {{shelterPet.petname}}
                                </p>
                            </div>
                             <div >
                                <p>
                                    Pet Type:
                                    {{shelterPet.pettype}}
                                </p>

                            </div>
                            <div >
                                <p>
                                    Description:
                                    {{shelterPet.petdescription}}
                                </p>

                            </div>
                            <div >
                            <p>
                                Breed:
                                {{shelterPet.petbreed}}
                            </p>
                            </div>
                            <div >

                                <p>
                                    Post Code:
                                    {{shelterPet.postcode}}
                                </p>
                            </div>

                </article>

                {{/each}}



</section>